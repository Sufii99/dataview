<div class="devise-container">
  <div class="devise-form">
    <h2>Iniciar Sesión</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, required: true %>

      <%= f.label :password %>
      <%= f.password_field :password, required: true %>

      <%= f.submit "Iniciar Sesión", class: "btn-primary" %>
    <% end %>

    <div class="devise-links">
      <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name) %> <br>
      <%= link_to "¿No tienes cuenta? Regístrate", new_registration_path(resource_name) %>
    </div>
  </div>
</div>
